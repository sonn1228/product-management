<%- include('../../layouts/default.ejs') %>
  <%- include('../../mixins/box-head.ejs') %>
    <%- include('../../mixins/alert.ejs') %>

      <%- alertSuccess() %>
        <%- alertError() %>

          <div class="container my-3">
            <div class="row">
              <div class="col-12">
                <%- boxHead("Đặt hàng") %>
              </div>

              <% if (cartDetail.products.length> 0) { %>
                <div class="row">
                  <div class="col-12">
                    <table class="table table-bordered" table-cart>
                      <thead>
                        <tr>
                          <th>STT</th>
                          <th>Ảnh</th>
                          <th>Tên</th>
                          <th>Giá</th>
                          <th>Số lượng</th>
                          <th>Tổng tiền</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% cartDetail.products.forEach((item, index)=> { %>
                          <tr>
                            <td>
                              <%= index + 1 %>
                            </td>
                            <td>
                              <img src="<%= item.infoProduct.thumbnail %>" alt="<%= item.infoProduct.title %>"
                                width="80px">
                            </td>
                            <td>
                              <%= item.infoProduct.title %>
                            </td>
                            <td>
                              <%= item.infoProduct.priceNew %>$
                            </td>
                            <td>
                              <%= item.quantity %>
                            </td>
                            <td>
                              <%= item.infoProduct.totalPrice %>$
                            </td>
                          </tr>
                          <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>

                <h3 class="text-right">Tổng đơn hàng: <%= cartDetail.totalPrice %>$</h3>

                <div class="row">
                  <div class="col-12">
                    <div class="card p-4 my-4">
                      <form action="/checkout/order" method="POST">
                        <div class="form-group">
                          <label for="fullName">Họ tên</label>
                          <input type="text" class="form-control" id="fullName" name="fullName" required>
                        </div>
                        <div class="form-group">
                          <label for="phone">Số điện thoại</label>
                          <input type="text" class="form-control" id="phone" name="phone" required>
                        </div>
                        <div class="form-group">
                          <label for="address">Địa chỉ</label>
                          <input type="text" class="form-control" id="address" name="address" required>
                        </div>
                        <div class="form-group">
                          <button type="submit" class="btn btn-success btn-block">ĐẶT HÀNG</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>

                <% } else { %>
                  <p>Chưa có sản phẩm nào trong giỏ hàng.</p>
                  <a href="/products" class="btn btn-warning">Mua sắm ngay</a>
                  <% } %>
            </div>
          </div>