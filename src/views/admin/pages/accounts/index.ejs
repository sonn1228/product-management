<div>

  <h1 class="mb-4">Danh sách tài khoản</h1>

  <div class="card mb-3">
    <div class="card-header">Danh sách</div>
    <div class="card-body">
      <div class="row">
        <div class="col-8"></div>
        <div class="col-4 text-right">
          <a href="<%= `${prefixAdmin}/accounts/create` %>" class="btn btn-outline-success">+ Thêm mới</a>
        </div>
      </div>

      <table class="table table-hover table-sm">
        <thead>
          <tr>
            <th>STT</th>
            <th>Avatar</th>
            <th>Họ tên</th>
            <th>Phân quyền</th>
            <th>Email</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% if (records) { %>
            <% records.forEach(function(item, index) { %>
              <tr>
                <td>
                  <%= index + 1 %>
                </td>
                <td>
                  <img src="<%= item.avatar %>" alt="<%= item.fullName %>" width="100px" height="auto" />
                </td>
                <td>
                  <%= item.fullName %>
                </td>
                <td>
                  <%= item.roleTitle %>
                </td>
                <td>
                  <%= item.email %>
                </td>
                <td>
                  <% if (item.status==="active" ) { %>
                    <a href="javascript:;" class="badge badge-success" data-status="active">Hoạt động</a>
                    <% } else { %>
                      <a href="javascript:;" class="badge badge-danger" data-status="inactive">Dừng hoạt động</a>
                      <% } %>
                </td>
                <td>
                  <a class="btn btn-secondary btn-sm" href="<%= `${prefixAdmin}/accounts/detail/${item.id}` %>">Chi
                    tiết</a>
                  <a class="btn btn-warning btn-sm ml-1" href="<%= `${prefixAdmin}/accounts/edit/${item.id}` %>">Sửa</a>
                  <button class="btn btn-danger btn-sm ml-1" button-delete data-id="<%= item.id %>">Xóa</button>
                </td>
              </tr>
              <% }); %>
                <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <form action="<%= `${prefixAdmin}/accounts/delete` %>" method="post" form-delete-item></form>
</div>